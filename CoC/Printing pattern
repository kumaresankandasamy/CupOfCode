#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

#define max(a, b) ((a > b) ? a : b)

int main() 
{
    int n;
    scanf("%d", &n);
    // Complete the code to print the pattern.
    int i,k;
    for(i = -n+1; i < n; i++)
    {
        for(k = -n+1; k < n; k++)
        {
            int num = max(abs(i),abs(k))+1;
            printf("%d ", num);
        }
        printf("\n");
    }
    return 0;
}
