import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int k = sc.nextInt();
        int total = 0;
        
        for (int i = 0; i < n; i++) {
            int price = sc.nextInt();
            if (i != k) total += price;
        }
        
        int charged = sc.nextInt();
        
        System.out.println(total / 2 == charged ? "Bon Appetit" : charged - (total/2));
    }
}
